{% extends 'base.html.twig' %}
{%  block body %}
    <h1>{{'Répertorie des catégories'|trans}}</h1>
    <section class="container">
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'Categorie'|trans }}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-outline-secondary mx-2" href="{{ path('category_edit', { id: category.id }) }}">{{ 'Modifier'|trans }}</a>
                            <p class="mx-2">{{ include('category/_delete_form.html.twig') }}</p>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a class="btn btn-outline-primary mx-2" href="{{ path('category_new') }}">{{ 'Ajouter'|trans }}</a>
        </div>
    </section>

{% endblock %}

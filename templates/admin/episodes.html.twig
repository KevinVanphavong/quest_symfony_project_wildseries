{% extends 'base.html.twig' %}
{%  block body %}
    <h1>{{'Index des épisodes'|trans}}</h1>
<section class="container">
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'Titre'|trans }}</th>
            <th>{{ 'Saison'|trans }} n°</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td class="text-light">{{ episode.title }}</td>
                <td>{{ episode.season.number }}</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-outline-secondary mx-2" href="{{ path('episode_edit', { slug: episode.slug }) }}">{{ 'Modifier'|trans }}</a>
                        <p class="mx-2">{{ include('episode/_delete_form.html.twig') }}</p>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-right">
        <a class="btn btn-outline-primary m-5" href="{{ path('admin_episodes') }}">{{ 'Ajouter'|trans }}</a>
    </div>
</section>
{% endblock %}

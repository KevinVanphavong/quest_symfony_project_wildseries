{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Liste des séries{% endblock %}

{% block body %}
    <section class="container">
    <h1>Toutes nos séries</h1>
    <a href="{{ path('program_new') }}" class="btn-primary btn my-3">Ajouter une nouvelle série</a>
        {% for program in programs %}
    <div class="jumbotron d-lg-flex bg-light">
        <div>
            <img src="{{ program.poster }}"
                 style="width: 18rem;
                         height:30rem;
                         margin-right: 20px;"
                 alt="image of {{ program.title }}">
        </div>
        <div>
            <h2><strong>{{ program.title }}</strong> </h2>
            <div class="d-flex align-items-center">
                <p class="label-category">Catégorie :</p>
                <h3><strong>{{ program.category.name }}</strong></h3>
            </div>
            <p class="lead">{{ program.summary }}.</p>
            <a href="{{ path('program_show', { slug: program.slug }) }}"
               class="btn btn-primary">Plus de détails sur {{ program.title }}</a>
            {% if is_granted("ROLE_ADMIN") %}
                <a class="btn btn-primary ml-1" href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
            {%endif%}            {% if is_granted("ROLE_CONTRIBUTOR") %}
                <a class="btn btn-primary ml-1" href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
            {%endif%}
        </div>
    </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </section>


    <br>
    <hr>
    <a class="back" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}

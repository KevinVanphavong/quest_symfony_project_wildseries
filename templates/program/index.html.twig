{% extends 'base.html.twig' %}
{% block title %}All programs{% endblock %}

{% block body %}
    <section class="container">
    <h1>Toutes nos séries</h1>
    {% for program in programs %}
    <div class="jumbotron d-lg-flex bg-light">
        <div>
            <img src="{{ program.poster }}"
                 style="width: 18rem;
                         height:30rem;
                         margin-right: 20px;"
                 alt="image of {{ program.title }}">
        </div>
        <div>
            <h2><strong>{{ program.title }}</strong> </h2>
            <div class="d-flex align-items-center">
                <p class="label-category">Catégorie :</p>
                <h3><strong>{{ program.category.name }}</strong></h3>
            </div>
            <p class="lead">{{ program.summary }}.</p>
            <a href="{{ path('program_show', { id: program.id }) }}"
               class="btn btn-primary">Plus de détails sur {{ program.title }}</a>
        </div>
    </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </section>


    <br>
    <hr>
    <a class="back" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
{%  extends 'base.html.twig' %}
{% block title %}{{ program.title }} | Episode {{ episode.number }} - Saison {{ season.number }}{% endblock %}


{% block body%}
    <section class="container">
        <div class="media">
            <div class="d-lg-flex text-xs-center">
                <div>
                    <img class="img-series-show" src="{{program.poster}}" alt="{{ program.title }} poster">
                </div>
                <div>
                    <h2 class="display-4"><strong>{{ program.title }}</strong></h2>
                    <div class="d-flex align-items-center">
                        <p class="label-category">Cat√©gorie :</p><h3>{{ program.category.name }}</h3>
                    </div>
                    <div class="d-flex align-items-center">
                        <p class="label-category">Episode :</p><h3>{{ episode.number }}</h3>
                    </div>
                    <div class="d-flex align-items-center">
                        <p class="label-category">Titre :</p><h3>" {{ episode.title }} "</h3>
                    </div>
                    <p>{{ episode.synopsis }}</p>
                </div>

            </div>
        </div>
        <br>
    </section>
{% endblock %}
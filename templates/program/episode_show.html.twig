{%  extends 'base.html.twig' %}
{% block title %}{{ program.title }} | Episode {{ episode.number }} - Saison {{ season.number }}{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block body%}
    <div class="text-primary text-center mb-3">
        <h1>{{ program.title }}</h1>
        <h2>" {{ episode.title }} "</h2>
    </div>

    <section class="container">
        <div class="media">
            <div class="d-lg-flex text-xs-center">
                <div>
                    <img class="img-series-show" src="{{program.poster}}" alt="{{ program.title }} poster">
                </div>
                <div>
                    <h2 class="display-4"><strong>{{ program.title }}</strong></h2>
                    <div class="d-flex align-items-center">
                        <p class="label-category">Catégorie :</p><h3>{{ program.category.name }}</h3>
                    </div>
                    <div class="d-flex align-items-center">
                        <p class="label-category">Episode :</p><h3>{{ episode.number }}</h3>
                    </div>
                    <div class="d-flex align-items-center">
                        <p class="label-category">Titre :</p><h3>" {{ episode.title }} "</h3>
                    </div>
                    <div class="d-flex">
                        <span><p class="label-category">Description : {{ episode.synopsis }}</p></span>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <h3 class="text-primary"> Commentaires : </h3>
            {% for comment in episode.comments %}
                <p class="text-light">De : {{ comment.author.email }} <br>
                    Note : {{ comment.rate }} <br>
                    Commentaire : {{ comment.comment }}
                </p>
                {% if app.user %}
                {% if is_granted("ROLE_ADMIN") or app.user.email == comment.author.email %}
                    {#
                    Supprimer le commentaire créé
                    Seulement si Role Admin
                    ou Seulement si connecté
                    #}
                    <p>{{ include('program/_delete_comment.html.twig') }}</p>
                {% endif %}
            {% endif %}
            {% endfor %}
        <br>
        {% if app.user %}
        <h3>Ajouter un commentaire :</h3>
        <p>{{ include('episode/_form.html.twig') }}</p>
        {% endif %}


    </section>

    <a class="back" href="{{ path('program_season_show', {program: program.id, season: season.id}) }}">
        Retour aux épisodes
    </a>
{% endblock %}

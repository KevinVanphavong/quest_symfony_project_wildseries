{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="container text-primary">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'Se déconnecter'|trans }}</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-4 font-weight-normal">{{ 'Veuillez vous enregistrer' }}</h1>
            <label for="inputEmail">{{ 'Email'|trans  }}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" required autofocus>
            <label for="inputPassword">{{ 'Mot de passe'|trans  }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control mb-4" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                {{ 'S\'enregistrer'|trans  }}
            </button>
        </form>
{#        <a href="{{ path('app_register') }}" class="btn btn-outline-primary mt-3">Créer un compte</a>#}
    </section>
{% endblock %}

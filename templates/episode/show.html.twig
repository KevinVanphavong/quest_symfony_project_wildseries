{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

<div class="container mt-5">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="container-fluid">
    <div class="my-2">
        <a href="{{ path('episode_edit', {slug: episode.slug}) }}" class="btn btn-primary">edit</a>
    </div>

    <div class="my-2">
        {{ include('episode/_delete_form.html.twig') }}
    </div>

    <div class="my-2">
        <a href="{{ path('episode_index') }}">back to list</a>
    </div>
</div>
{% endblock %}
